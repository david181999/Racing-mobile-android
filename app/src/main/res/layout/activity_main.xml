                android:id="@+id/stone1_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/stone_block_svgrepo_com"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:visibility="invisible"/>
