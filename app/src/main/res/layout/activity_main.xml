                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone6_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
